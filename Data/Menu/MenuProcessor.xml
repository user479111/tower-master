<?xml version="1.0" encoding="UTF-8"?>
<params name="menus">

    <section name="base-menu">

        <section name="background">
            <attstr name="background-image" val="MainMenuTower.png"/>
        </section>

        <section name="menu">
            <attstr name="menu-image" val="MenuBoard.png"/>
            <attpos x="10" y="0"/>
        </section>

        <section name="menu-content">
            <section name="company">
                <attstr name="company-image" val="Company.png"/>
                <attpos x="80" y="80"/>
            </section>
            <section name="battle">
                <attstr name="battle-image" val="Battle.png"/>
                <attpos x="80" y="160"/>
            </section>
            <section name="settings">
                <attstr name="settings-image" val="Settings.png"/>
                <attpos x="80" y="240"/>
            </section>
            <section name="credits">
                <attstr name="creadits-image" val="Credits.png"/>
                <attpos x="80" y="320"/>
            </section>
            <section name="quit">
                <attstr name="quit-image" val="Quit.png"/>
                <attpos x="80" y="400"/>
            </section>
        </section>

    </section>

    <section name="battle-menu">

        <section name="background">
            <attstr name="background-image" val="MainMenuTower.png"/>
        </section>

        <section name="menu">
            <attstr name="menu-image" val="BattleBoard.png"/>
            <attpos x="50" y="0"/>
        </section>

        <section name="menu-content">
            <section name="back">
                <attstr name="back-image" val="Back.png"/>
                <attpos x="70" y="390"/>
            </section>
            <section name="load">
                <attstr name="load-image" val="Load.png"/>
                <attpos x="560" y="390"/>
            </section>
        </section>

        <section name="locations-list">
            <attpos x="120" y="120"/>
            <attnum name="font-size" val="16"/>
            <attnum name="interval" val="2"/>
            <attnum name="width" val="300"/>
            <attnum name="height" val="200"/>
        </section>

        <section name="map-preview">
            <attstr name="default-map" val="DefaultMapPreview.png"/>
            <attpos x="545" y="100"/>
            <attnum name="scale" val="0.08"/>
        </section>

        <section name="location-info">
            <attpos x="545" y="200"/>
            <attnum name="font-size" val="10"/>
        </section>
    </section>

</params>
