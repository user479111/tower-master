<?xml version="1.0" encoding="UTF-8"?>
<params name="pause-menu">

    <section name="menu">
        <attstr name="menu-image" val="MenuBoard.png"/>
        <attpos x="0" y="0" z='1' val="center"/>
    </section>

    <section name="menu-content">
        <section name="resume" type="menu-item">
            <attpos x="80" y="80" z="1" val="center"/>
            <attnum name="fixed-size" val="false"/>
            <attstr name="image" val="Scroll.png"/>
            <attstr name="text" language="English" val="Resume"/>
            <attstr name="text" language="Українська" val="Відновити"/>
            <attstr name="text" language="Русский" val="Возобновить"/>
        </section>
        <section name="main-menu" type="menu-item">
            <attpos x="80" y="160" z="1" val="center"/>
            <attnum name="fixed-size" val="false"/>
            <attstr name="image" val="Scroll.png"/>
            <attstr name="text" language="English" val="Main menu"/>
            <attstr name="text" language="Українська" val="Головне меню"/>
            <attstr name="text" language="Русский" val="Главное меню"/>
        </section>
    </section>

</params>
